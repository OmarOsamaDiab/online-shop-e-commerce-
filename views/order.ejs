<%- include('./parts/header') %> <%- include('./parts/body') %>
<div class='container'>
    <% if (items.length===0) { %>
    <p class="alert alert-danger">there is no items</p>
    <%} else { %>
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <td scope="col">Id</td>
                <td scope="col">Time</td>
                <td scope="col">Name</td>
                <td scope="col">Price</td>
                <td scope="col">Amount</td>
                <td scope="col">status</td>
                <td scope="col">Total</td>
                <td scope="col"></td>
            </tr>
        </thead>
        <tbody>
            <% for (let i = 0;i < items.length; i++ ) { %>
            <tr>
                <td><%= i+1  %></td>
                <td><%= items[i].timeStamp %> </td>
                <td><%= items[i].name %> </td>
                <td><%= items[i].price %> </td>
                <td><%= items[i].status %></td>
                <td><%= items[i].amount %></td>
                <td><%= items[i].amount * items[i].price %> $</td>
                <form method="POST">
                    <td>
                        <% if (items[i].status === 'pending') { %>
                        <input type="hidden" name="orderId" value="<%= items[i]._id %>">
                        <input type="submit" class="btn btn-danger" value="Cancel" formaction="/order/delete">
                        <%}%>
                    </td>
                </form>
            </tr>
            <% } %>
        </tbody>
    </table>
    <%}%>
</div>
<%-include('./parts/footer') %>